@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@inject CfoBusiness.AutofacService options
@{
    ViewData["Title"] = "Index";
    string confifstr = Configuration["ConnectionStrings:CoreDemoVisContext"];
}

<h2>Index</h2>

<div>
    <ul>
        <li>@confifstr</li>
        <li>@Html.DropDownList("ListGender", options.ListGenders().Select(x => new SelectListItem { Value = x, Text = x }))</li>
    </ul>

    <h5>古城</h5>
    <ul>
        <li>@ViewBag.LongDu</li>
        <li>@ViewBag.NanYang</li>
    </ul>

    <h5>朝代</h5>
    <ul>
        <li>@ViewBag.Qin</li>
        <li>@ViewBag.Tang</li>
        <li>@ViewBag.Tang2</li>
        <li>@ViewBag.Ming</li>
    </ul>
</div>