
@{
    ViewData["Title"] = "登录";
}
<h5>登录</h5>
<div class="row">
    <form class="form-horizontal" method="post" action="/Home/Login">
        <div class="form-group">
            <label class="control-label">名称</label>
            <input class=" input-group" name="loginName" autocomplete="off" />
